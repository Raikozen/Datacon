@model LoginViewModel

@{ 
    Layout = "LoginLayout";
}

<div class="row loginForm">
	<div class="LoginBox col-xs-6 col-xs-offset-3">
		<img src="~/images/Datacon-logo-met-payoff.png" class="imglogo"/>
		@using (Html.BeginForm("Login", "User"))
		{	
			<div class="col-xs-12">
				<input class="LoginInput" asp-for="Email" name="email" />
				<span class="col-sm-12">@Html.ValidationMessageFor(m => m.Email)</span>
			</div>
			<div class="col-xs-12">
				<input class="LoginInput" asp-for="Password" name="password" type="password" />
				<span class="col-sm-12">@Html.ValidationMessageFor(m => m.Password)</span>
			</div>
			<div class=" col-xs-12">
				<input class="LoginButton" type="submit" value="Login"/>
			</div>
		}
	</div>
</div>