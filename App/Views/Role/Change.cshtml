@model RoleViewModel


<h2 class="Headers">Change role</h2>
<div class="row accountForm col-sm-4 col-sm-offset-4">
    <form asp-controller="Role" asp-action="Change" method="post" class=" col-xs-offset-3">
        <select class="dropdown" name="SelectedUserId" id="SelectedUserId">
            @foreach (User user in Model.Users)
            {
                if (Model.SelectedUser.Id == user.Id)
                {
                    <option selected value="@user.Id">
                        @user.Firstname
                    </option>
                }

                else
                {
                    <option value="@user.Id">
                        @user.Firstname
                    </option>
                }
            }
        </select>

        <select class="dropdown" name="SelectedRoleId">  
            @foreach (Role role in Model.Roles)
            {
                if (Model.SelectedUser.Role.Id == role.Id)
                {
                    <option selected value="@role.Id">
                        @role.Name
                    </option>
                }


                else
                {
                    <option value="@role.Id">
                        @role.Name
                    </option>
                }
            }
        </select>

           <input class="buttonCreate col-xs-offset-3" type="submit" value="Submit"  />
        <p>@ViewData["ConfirmChange"]</p>
		<p>@ViewData["ErrorMessage"]</p>
    </form>


        

</div>
